<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_discovery_pengyouquan"
                android:textColor="#ffbc"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="ContentContentContent"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/photoImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/photoImg1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_1"/>

                <ImageView
                    android:id="@+id/photoImg2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:paddingLeft="10dp"
                    android:src="@mipmap/ic_2"/>

                <ImageView
                    android:id="@+id/photoImg3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:paddingLeft="10dp"
                    android:src="@mipmap/ic_3"/>
            </LinearLayout>

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2分钟前"
                android:textColor="#ff12"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/pinglunImg"
            android:layout_width="23dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/afr"
            android:layout_gravity="bottom"/>

    </LinearLayout>
</LinearLayout>